<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    app:cardCornerRadius="@dimen/_15sdp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/_15sdp"
    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/gift_super_likes"
        android:textColor="@color/black"
        android:layout_centerHorizontal="true"
        android:textSize="@dimen/_14sdp"
        android:fontFamily="@font/inter_semi_bold"
        android:layout_centerVertical="true"
        />
    <ImageView
        android:id="@+id/ivCross"
        android:layout_width="@dimen/_20sdp"
        android:layout_height="@dimen/_20sdp"
        android:padding="@dimen/_4sdp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_cross"
        />
</RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@color/gray" />

        <RadioGroup
            android:id="@+id/radioGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@id/checkboxFanClub"
            >

            <RadioButton
                android:id="@+id/rbtn1SuperLikes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:text="@string/_01_super_likes"
                android:checked="true"
                android:buttonTint="@color/red"
                android:textColor="@color/black"
                android:textSize="18sp"
               />

            <RadioButton
                android:id="@+id/rbtn5SuperLikes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10sdp"
                android:text="@string/_05_super_likes"
                android:buttonTint="@color/red"
                android:textColor="@color/black"
                android:textSize="18sp"
                />

            <RadioButton
                android:id="@+id/rbtn20SuperLikes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10sdp"
                android:text="@string/_10_super_likes"
                android:buttonTint="@color/red"
                android:textColor="@color/black"
                android:textSize="18sp"
                />

            <RadioButton
                android:id="@+id/rbtn50SuperLikes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10sdp"
                android:text="@string/_50_super_likes"
                android:buttonTint="@color/red"
                android:textColor="@color/black"
                android:textSize="18sp"
                />

            <RadioButton
                android:id="@+id/rbtn100SuperLikes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10sdp"
                android:text="@string/_100_super_likes"
                android:buttonTint="@color/red"
                android:textColor="@color/black"
                android:textSize="18sp"
                />
            <RadioButton
                android:id="@+id/rbtn1000SuperLikes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10sdp"
                android:text="@string/_1000_super_likes"
                android:buttonTint="@color/red"
                android:textColor="@color/black"
                android:textSize="18sp"
                />
            <RadioButton
                android:id="@+id/rbtn10000SuperLikes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10sdp"
                android:text="@string/_10000_super_likes"
                android:buttonTint="@color/red"
                android:textColor="@color/black"
                android:textSize="18sp"
                />
                   </RadioGroup>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnAddSuperLikes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_bg_bottom_cornors"
            android:text="@string/confirm"
            android:textColor="@color/white"
            android:fontFamily="@font/inter_semi_bold"
            android:textAllCaps="false"
            android:layout_marginTop="@dimen/_20sdp"
            />

    </LinearLayout>
</androidx.cardview.widget.CardView>