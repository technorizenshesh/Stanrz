<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <RelativeLayout
            android:id="@+id/rlHeader"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_60sdp"
            android:background="@drawable/ic_header_bg"
            >

            <ImageView
                android:id="@+id/img_Settings"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:src="@drawable/ic_settings"
                android:padding="@dimen/_2sdp"
                android:layout_centerVertical="true"
                android:scaleType="fitXY"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="@dimen/_10sdp"
                app:tint="@color/white" />


            <TextView
                android:id="@+id/tvUser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_semi_bold"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/white"
                android:layout_centerVertical="true"
                android:textStyle="bold"
                android:layout_centerHorizontal="true"
                android:text="joshua_l"
                android:textSize="@dimen/_14sdp" />

        </RelativeLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.ProfileFragment"
    android:orientation="vertical"
    >
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <ImageView
        android:id="@+id/ivCoverPhoto"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_110sdp"
        android:scaleType="fitXY"
        android:background="@color/gray"
        />
<ImageView
    android:id="@+id/ivEditCoverPhoto"
    android:layout_width="@dimen/_20sdp"
    android:layout_height="@dimen/_20sdp"
    android:src="@drawable/ic_edits"
    android:layout_alignParentRight="true"
    android:layout_margin="@dimen/_10sdp"
    app:tint="@color/red" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_55sdp"
        >
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/ivProfile"
            android:layout_width="@dimen/_80sdp"
            android:layout_height="@dimen/_80sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:background="@drawable/circle_gray"
            android:src="@drawable/rider"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/ivProfile"
            android:layout_toRightOf="@id/ivProfile"
            android:layout_marginRight="@dimen/_10sdp"
             >
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".5"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_gravity="center"
                >
                <TextView
                    android:id="@+id/tvPosts"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_bold"
                    android:textColor="@color/black"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:layout_toLeftOf="@id/btnFollow"
                    android:layout_toRightOf="@+id/iv_history"
                    android:textSize="@dimen/_12sdp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_regular"
                    android:textColor="@color/black"
                    android:text="@string/posts"
                    android:gravity="center"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@id/btnFollow"
                    android:layout_toRightOf="@+id/iv_history"
                    android:textSize="@dimen/_12sdp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llFollowers"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".5"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_gravity="center"
                >
                <TextView
                    android:id="@+id/tvFollower"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_bold"
                    android:textColor="@color/black"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:layout_toLeftOf="@id/btnFollow"
                    android:layout_toRightOf="@+id/iv_history"
                    android:textSize="@dimen/_12sdp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_regular"
                    android:textColor="@color/black"
                    android:text="@string/followers"
                    android:gravity="center"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@id/btnFollow"
                    android:layout_toRightOf="@+id/iv_history"
                    android:textSize="@dimen/_12sdp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llFollowing"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".5"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_gravity="center"
                >
                <TextView
                    android:id="@+id/tvFollowing"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_bold"
                    android:textColor="@color/black"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:layout_toLeftOf="@id/btnFollow"
                    android:layout_toRightOf="@+id/iv_history"
                    android:textSize="@dimen/_12sdp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_regular"
                    android:textColor="@color/black"
                    android:text="@string/following"
                    android:gravity="center"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@id/btnFollow"
                    android:layout_toRightOf="@+id/iv_history"
                    android:textSize="@dimen/_12sdp" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/_10sdp"
    >
    <TextView
        android:id="@+id/tvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/inter_bold"
        android:textColor="@color/black"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:layout_toLeftOf="@id/btnFollow"
        android:layout_toRightOf="@+id/iv_history"
        android:textSize="@dimen/_13sdp" />

    <TextView
        android:id="@+id/tvBio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/inter_regular"
        android:textColor="@color/text_color"
        android:gravity="center"
        android:visibility="gone"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/btnFollow"
        android:layout_toRightOf="@+id/iv_history"
        android:textSize="@dimen/_12sdp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_15sdp"
        >
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnEdit"
            android:layout_width="0dp"
            android:layout_weight=".5"
            android:layout_height="@dimen/_35sdp"
            android:text="@string/edit_profile"
            android:textColor="@color/red"
            android:fontFamily="@font/inter_bold"
            android:textAllCaps="false"
            android:textSize="@dimen/_11sdp"
            android:background="@drawable/red_stroke"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/_5sdp"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnManage"
            android:layout_width="0dp"
            android:layout_weight=".5"
            android:layout_height="@dimen/_35sdp"
            android:text="@string/manage_vip_subscription"
            android:textColor="@color/red"
            android:fontFamily="@font/inter_bold"
            android:textAllCaps="false"
            android:textSize="@dimen/_10sdp"
            android:background="@drawable/red_stroke"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_bold"
            android:textColor="@color/black"
            android:layout_marginTop="@dimen/_10sdp"
            android:text="Daily top 10 stanrz"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:layout_toRightOf="@+id/iv_history"
            android:textSize="@dimen/_13sdp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_bold"
            android:textColor="@color/red"
            android:layout_marginTop="@dimen/_10sdp"
            android:text="@string/view_all"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@+id/iv_history"
            android:textSize="@dimen/_13sdp" />

    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvStanrz"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_bold"
            android:textColor="@color/black"
            android:layout_marginTop="@dimen/_10sdp"
            android:text="I am a top stanrz of..."
            android:layout_centerVertical="true"
            android:gravity="center"
            android:layout_toRightOf="@+id/iv_history"
            android:textSize="@dimen/_13sdp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_bold"
            android:textColor="@color/red"
            android:layout_marginTop="@dimen/_10sdp"
            android:text="Disable/Enable"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@+id/iv_history"
            android:textSize="@dimen/_13sdp" />

    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rvIamStanrz"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/_10sdp"
        >

        <com.google.android.material.card.MaterialCardView
            android:layout_width="0dp"
            android:layout_weight=".6"
            android:layout_height="@dimen/_35sdp"
            app:cardElevation="@dimen/_10sdp"
            android:id="@+id/cvUploads"
            android:layout_margin="@dimen/_1sdp">
            <TextView
                android:id="@+id/tvImage"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Images"
                android:textSize="@dimen/_11sdp"
                android:gravity="center"
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:background="@drawable/ic_header_bg"
                />

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="0dp"
            android:layout_weight=".6"
            android:layout_height="@dimen/_35sdp"
            app:cardElevation="@dimen/_10sdp"
            android:id="@+id/cvVideos"
            android:layout_margin="@dimen/_1sdp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Videos"
                android:textSize="@dimen/_11sdp"
                android:gravity="center"
                android:textColor="@color/dark_grey"
                android:id="@+id/tvVideo"
                android:layout_gravity="center"
                />

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="0dp"
            android:layout_weight=".5"
            android:layout_height="@dimen/_35sdp"
            app:cardElevation="@dimen/_10sdp"
            android:id="@+id/cvVip"
            android:visibility="gone"
            android:layout_marginLeft="@dimen/_2sdp"
            android:layout_margin="@dimen/_1sdp">
            <TextView
                android:id="@+id/tvVip"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Vip"
                android:textSize="@dimen/_11sdp"
                android:padding="@dimen/_10sdp"
                android:gravity="center"
                android:textColor="@color/dark_grey"
                android:layout_gravity="center"
                />

        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:nestedScrollingEnabled="false"
        android:id="@+id/rvUploads"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_gravity="center"
        android:gravity="center"
        android:visibility="gone"
        android:id="@+id/llVip"
        >
        <ImageView
            android:layout_width="@dimen/_60sdp"
            android:layout_height="@dimen/_60sdp"
            android:src="@drawable/ic_lock"
            android:layout_marginTop="@dimen/_40sdp"
            />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/tvJoin"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_30sdp"
            android:text="Join"
            android:textColor="@color/red"
            android:fontFamily="@font/inter_bold"
            android:layout_marginTop="@dimen/_10sdp"
            android:textAllCaps="false"
            android:background="@drawable/red_stroke"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="@dimen/_40sdp"
            />
    </LinearLayout>

</LinearLayout>
</LinearLayout>
    </androidx.core.widget.NestedScrollView>



    </LinearLayout>

</layout>