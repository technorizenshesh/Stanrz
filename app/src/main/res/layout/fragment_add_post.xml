<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.AddPostFragment"
    android:orientation="vertical"
    >

<ImageView
    android:id="@+id/ivPost"
    android:layout_width="@dimen/_50sdp"
    android:layout_height="@dimen/_50sdp"
    android:src="@drawable/ic_add_post"
    android:layout_centerInParent="true"
    android:visibility="gone"
    android:layout_gravity="center_horizontal|center_vertical"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        app:cardUseCompatPadding="true"
        android:elevation="@dimen/_10sdp"
        app:cardElevation="@dimen/_10sdp"
        app:cardCornerRadius="10dp"
        android:layout_centerInParent="true"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:gravity="center"
                android:padding="5dp"
                android:text="@string/select_option"
                android:textColor="@color/black"
                android:fontFamily="@font/inter_semi_bold"
                android:textSize="@dimen/_15sdp"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="@color/gray" />

            <TextView
                android:id="@+id/tvUploadImage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="@dimen/_10sdp"
                android:textSize="@dimen/_14sdp"
                android:text="@string/upload_image_from_camera"
                android:fontFamily="@font/inter_semi_bold"
                android:textColor="@color/black"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_20sdp"
                />

            <TextView
                android:id="@+id/tvUploadVideo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="@dimen/_10sdp"
                android:textSize="@dimen/_14sdp"
                android:text="@string/upload_video_from_camera"
                android:fontFamily="@font/inter_semi_bold"
                android:textColor="@color/black"
                android:layout_marginLeft="@dimen/_15sdp"
                />

            <TextView
                android:id="@+id/tvGallary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="@dimen/_10sdp"
                android:textSize="@dimen/_14sdp"
                android:text="@string/upload_image_video_from_galary"
                android:fontFamily="@font/inter_semi_bold"
                android:textColor="@color/black"
                android:layout_marginBottom="@dimen/_20sdp"
                android:layout_marginLeft="@dimen/_15sdp"
                />


        </LinearLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>
</layout>