<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.CoinDetailFragment"
    android:orientation="vertical"
    >
<include layout="@layout/header_layout" android:id="@+id/header"/>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_15sdp"
        app:cardCornerRadius="@dimen/_10sdp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_header_bg"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/_20sdp"
                >
                <ImageView
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_cent"
                    android:layout_gravity="center_vertical"
                    />
                <TextView
                    android:id="@+id/tvTotalCoins"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:textAllCaps="true"
                    android:layout_centerHorizontal="true"
                    android:textSize="@dimen/_25sdp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/metropolis_bold"
                    android:layout_gravity="center_vertical"
                    />
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/_1_superlikes_1"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_centerHorizontal="true"
                android:textSize="@dimen/_12sdp"
                android:textColor="@color/white"
                android:fontFamily="@font/inter_regular"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                />
        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <com.google.android.material.card.MaterialCardView
            android:layout_width="0dp"
            android:layout_weight=".5"
            android:layout_height="@dimen/_45sdp"
            app:cardElevation="@dimen/_10sdp"
            android:id="@+id/cvHistory"
            android:layout_margin="@dimen/_1sdp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/history"
                android:textSize="@dimen/_11sdp"
                android:padding="@dimen/_10sdp"
                android:gravity="center"
                android:textColor="@color/dark_grey"
                android:layout_gravity="center"
                />

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="0dp"
            android:layout_weight=".6"
            android:layout_height="@dimen/_45sdp"
            app:cardElevation="@dimen/_10sdp"
            android:id="@+id/cvExcahngeCoins"
            android:layout_margin="@dimen/_1sdp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/exchange_coins_to_superlikes"
                android:textSize="@dimen/_11sdp"
                android:gravity="center"
                android:textColor="@color/dark_grey"
                android:layout_gravity="center"
                />
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="0dp"
            android:layout_weight=".5"
            android:layout_height="@dimen/_45sdp"
            app:cardElevation="@dimen/_10sdp"
            android:id="@+id/cvWithdrawCoins"
            android:layout_margin="@dimen/_1sdp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/radeem_coins"
                android:textSize="@dimen/_11sdp"
                android:padding="@dimen/_10sdp"
                android:gravity="center"
                android:textColor="@color/dark_grey"
                android:layout_gravity="center"
                />
        </com.google.android.material.card.MaterialCardView>
        <com.google.android.material.card.MaterialCardView
            android:layout_width="0dp"
            android:layout_weight=".5"
            android:layout_height="@dimen/_45sdp"
            android:id="@+id/cvWithdrawCash"
            app:cardElevation="@dimen/_10sdp"
            android:layout_margin="@dimen/_1sdp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/cash_nearning"
                android:textSize="@dimen/_11sdp"
                android:textColor="@color/dark_grey"
                android:layout_gravity="center"
                android:gravity="center"
                />

        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llHistory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/_10sdp"
        android:padding="@dimen/_10sdp"
        >

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvHistory"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible" />

    </LinearLayout>

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rlExcahngeSuperlikes"
    android:visibility="gone"
>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/_10sdp"
        android:padding="@dimen/_10sdp"
        >

        <TextView
            android:id="@+id/tv_history"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_medium"
            android:textColor="@color/black"
            android:text="@string/exchange_rate_1_coin_1_superlike"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_toRightOf="@+id/iv_history"
            android:textSize="@dimen/_14sdp"
            android:layout_marginBottom="@dimen/_15sdp"
            />

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="@dimen/_10sdp"
            app:cardMaxElevation="@dimen/_15sdp"
            android:layout_margin="@dimen/_2sdp"
            >
            <EditText
                android:id="@+id/etEnterCoins"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_10sdp"
                android:inputType="number"
                android:backgroundTint="@color/white"
                android:textColor="@color/dark_grey"
                android:hint="@string/enter_the_amount"
                />

        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnExchange"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_bg"
        android:layout_marginTop="@dimen/_60sdp"
        android:textAllCaps="false"
        android:fontFamily="@font/inter_medium"
        android:textSize="@dimen/_16sdp"
        android:textColor="@color/white"
        android:layout_gravity="bottom"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/_15sdp"
        android:text="@string/exchange"
        />
</RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/rlWithdrawCoins"
        android:visibility="gone"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/_10sdp"
            android:padding="@dimen/_10sdp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_medium"
                android:textColor="@color/black"
                android:text="@string/redeem_rate_100_coins_1"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_toRightOf="@+id/iv_history"
                android:textSize="@dimen/_14sdp"
                android:layout_marginBottom="@dimen/_15sdp"
                />

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="@dimen/_10sdp"
                app:cardMaxElevation="@dimen/_15sdp"
                android:layout_margin="@dimen/_2sdp"
                >
                <EditText
                    android:id="@+id/etRadeemCoins"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_10sdp"
                    android:inputType="number"
                    android:backgroundTint="@color/white"
                    android:textColor="@color/dark_grey"
                    android:hint="@string/enter_coin_amount_to_redeem"
                    />

            </com.google.android.material.card.MaterialCardView>


        </LinearLayout>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnReddemCoins"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_bg"
            android:layout_marginTop="@dimen/_60sdp"
            android:textAllCaps="false"
            android:fontFamily="@font/inter_medium"
            android:textSize="@dimen/_16sdp"
            android:textColor="@color/white"
            android:layout_gravity="bottom"
            android:layout_alignParentBottom="true"
            android:layout_margin="@dimen/_15sdp"
            android:text="@string/withdraw_coins"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/rlWithdrawCash"
        android:visibility="gone"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/_10sdp"
            android:padding="@dimen/_10sdp"
            >
          <!--
           <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_medium"
                android:textColor="@color/black"
                android:text="Enter amount you wish to withdraw"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_toRightOf="@+id/iv_history"
                android:textSize="@dimen/_14sdp"
                android:layout_marginBottom="@dimen/_15sdp"
                />
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="@dimen/_10sdp"
                app:cardMaxElevation="@dimen/_15sdp"
                android:layout_margin="@dimen/_2sdp"
                >
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_10sdp"
                    android:backgroundTint="@color/white"
                    android:textColor="@color/dark_grey"
                    android:hint="Enter amount to withdraw"
                    />
            </com.google.android.material.card.MaterialCardView>
-->

        </LinearLayout>

        <TextView
            android:id="@+id/tvTotalEarning"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_medium"
            android:textColor="@color/black"
            android:text="@string/total_earning"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_toRightOf="@+id/iv_history"
            android:textSize="@dimen/_14sdp"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginBottom="@dimen/_15sdp"
            />
        <TextView
            android:id="@+id/tvTotalDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_regular"
            android:textColor="@color/black"
            android:text=" Earnings totaling or exceeding $50 will be auto-withdrawn on the 1st of every month. Withdrawals are paid and processed on a Net-45 payout term."
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_toRightOf="@+id/iv_history"
            android:textSize="@dimen/_11sdp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginBottom="@dimen/_20sdp"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnWithdrawCas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_bg"
            android:layout_marginTop="@dimen/_60sdp"
            android:textAllCaps="false"
            android:fontFamily="@font/inter_medium"
            android:textSize="@dimen/_16sdp"
            android:textColor="@color/white"
            android:visibility="gone"
            android:layout_gravity="bottom"
            android:layout_alignParentBottom="true"
            android:layout_margin="@dimen/_15sdp"
            android:text="@string/withdraw"
            />
    </RelativeLayout>


</LinearLayout>
</layout>