<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".fragments.JoinVipMembershipFragment">

        <include layout="@layout/header_layout" android:id="@+id/header"/>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

            <LinearLayout
                android:id="@+id/layoutApply"
                android:layout_width="match_parent"
                android:visibility="gone"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvVerficationAccountLink"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_regular"
                    android:gravity="center"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/black"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:text="@string/please_verify_account_to_open_fan_club"
                    android:textSize="@dimen/_12sdp"
                    android:visibility="gone"
                    android:paddingBottom="@dimen/_5sdp"
                    />

                <TextView
                    android:id="@+id/tvVerficationLink"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_regular"
                    android:gravity="center"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/blue"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:text="@string/verify_account"
                    android:visibility="gone"
                    android:textSize="@dimen/_12sdp"
                    android:paddingBottom="@dimen/_5sdp"
                    />

                <TextView
                    android:id="@+id/tvVerifyAccount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_regular"
                    android:gravity="center"
                    android:visibility="gone"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/black"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:text="@string/to_open_fan_club_please_verify_account"
                    android:textSize="@dimen/_12sdp"
                    android:paddingBottom="@dimen/_5sdp"
                    />

                <TextView
                    android:id="@+id/tvPendingVerification"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_semi_bold"
                    android:gravity="center"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/black"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:text="@string/pending"
                    android:textSize="@dimen/_16sdp"
                    android:visibility="gone"
                    android:paddingBottom="@dimen/_5sdp"
                    />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnApplyForPlan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_bg"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:textAllCaps="false"
                    android:padding="@dimen/_10sdp"
                    android:fontFamily="@font/poppins_medium"
                    android:textSize="@dimen/_12sdp"
                    android:textColor="@color/white"
                    android:layout_margin="@dimen/_15sdp"
                    android:layout_centerVertical="true"
                    android:text="@string/open_fan_clucb"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llDone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:visibility="gone"
                >
                <com.google.android.material.checkbox.MaterialCheckBox
                    android:id="@+id/checkboxEnableDisable"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/enable_disable_fan_club"
                    android:textColor="@color/black"
                    android:buttonTint="@color/red"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:textSize="@dimen/_14sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/llSubscription"
                    android:orientation="vertical"
                    android:visibility="gone"
                    >
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_2sdp"
                    >
                    <TextView
                        android:id="@+id/tv_header"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/inter_regular"
                        android:layout_gravity="center_horizontal"
                        android:textColor="@color/black"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:text="Lorem Ipsum comes from sections 1.10.32 and 1.10.33 of de Finibus Bonorum et Malorum (The Extremes of Good"
                        android:textSize="@dimen/_14sdp"
                        android:paddingBottom="@dimen/_5sdp"
                        android:visibility="gone"
                        />

                </androidx.cardview.widget.CardView>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_10sdp"
                        android:orientation="horizontal"
                        >

                        <EditText
                            android:id="@+id/etDescription"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:background="@drawable/et_bg"
                            android:padding="@dimen/_10sdp"
                            android:fontFamily="@font/inter_semi_bold"
                            android:hint="@string/enter_fan_club_description"
                            android:textSize="@dimen/_12sdp"
                            />
                        <TextView
                            android:id="@+id/btnAdd"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:background="@color/red"
                            android:text="@string/add"
                            android:gravity="center"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_12sdp"
                            android:fontFamily="@font/inter_semi_bold"
                            android:paddingHorizontal="@dimen/_13sdp"
                            />
                    </LinearLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/rvSubcriptionItems"
                        android:layout_gravity="center_horizontal"
                        />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btnCreateSubscription"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/button_bg"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:textAllCaps="false"
                        android:padding="@dimen/_10sdp"
                        android:fontFamily="@font/poppins_medium"
                        android:textSize="@dimen/_12sdp"
                        android:textColor="@color/white"
                        android:layout_margin="@dimen/_15sdp"
                        android:layout_centerVertical="true"
                        android:text="@string/create_plan"
                        />

                </LinearLayout>

            </LinearLayout>

</LinearLayout>


        </androidx.core.widget.NestedScrollView>

    </LinearLayout>
</layout>