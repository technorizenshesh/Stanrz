<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    >
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
<RelativeLayout
    android:id="@+id/rlUnlock"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_1sdp"
    >

    <ImageView
        android:id="@+id/ivPhoto"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_100sdp"
        android:scaleType="fitXY"
        android:src="@drawable/map_bg"
        />
    <ImageView
        android:id="@+id/ivPlay"
        android:layout_width="@dimen/_20sdp"
        android:layout_height="@dimen/_20sdp"
        android:src="@drawable/ic_play"
        android:scaleType="fitXY"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_alignParentRight="true"
        android:visibility="gone"
        />

    <ImageView
        android:id="@+id/ivMultipleBadge"
        android:layout_width="@dimen/_15sdp"
        android:layout_height="@dimen/_15sdp"
        android:src="@drawable/ic_multiple_image"
        android:scaleType="fitXY"
        android:visibility="gone"
        android:layout_margin="@dimen/_5sdp"
        android:layout_alignParentRight="true"
        />

    <ProgressBar
        android:id="@+id/progress"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_centerInParent="true"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/ivVideo"
        android:layout_width="@dimen/_15sdp"
        android:layout_height="@dimen/_15sdp"
        android:src="@drawable/ic_play"
        android:layout_alignParentRight="true"
        android:layout_margin="@dimen/_5sdp"
        android:visibility="gone"
        />

    <ImageView
        android:id="@+id/ivMyLock"
        android:layout_width="@dimen/_20sdp"
        android:layout_height="@dimen/_20sdp"
        android:src="@drawable/ic_lock1"
        android:layout_margin="@dimen/_5sdp"
        android:visibility="gone"
        app:tint="@color/gray" />

</RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_100sdp"
        android:id="@+id/rlLock"
        android:visibility="gone"
        android:layout_margin="@dimen/_1sdp"
        >
        <ImageView
            android:id="@+id/ivLock"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/picture"
            />

        <ImageView
            android:id="@+id/ivLock1"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:src="@drawable/ic_lock1"
            android:layout_centerInParent="true"
            android:scaleType="fitXY"
            app:tint="@color/white" />

    </RelativeLayout>

</RelativeLayout>
</layout>