<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
    <RelativeLayout
        android:id="@+id/ll200"
        android:layout_width="@dimen/_200sdp"
        android:layout_height="@dimen/_130sdp"
        android:background="@drawable/ic_blank_orange"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/_10sdp"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_25sdp"
            android:layout_centerHorizontal="true"
            >
            <ImageView
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:scaleType="fitXY"
                android:src="@drawable/ic_super_heart"
                android:layout_gravity="center_vertical"
                />
            <TextView
                android:id="@+id/tvSuperLikes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="200"
                android:layout_marginLeft="@dimen/_5sdp"
                android:textAllCaps="true"
                android:layout_centerHorizontal="true"
                android:textSize="@dimen/_18sdp"
                android:textColor="@color/white"
                android:fontFamily="@font/inter_bold"
                android:textStyle="bold"
                android:layout_gravity="center_vertical"
                />
            <TextView
                android:id="@+id/tvMonth4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="/ 12 Months"
                android:layout_marginLeft="@dimen/_5sdp"
                android:textAllCaps="true"
                android:layout_centerHorizontal="true"
                android:textSize="@dimen/_12sdp"
                android:textColor="@color/white"
                android:fontFamily="@font/inter_bold"
                android:layout_gravity="center_vertical"
                />
        </LinearLayout>
        <TextView
            android:id="@+id/tv200Edit"
            android:layout_width="@dimen/_60sdp"
            android:layout_height="@dimen/_20sdp"
            android:text="@string/edit"
            android:background="@drawable/orange_button_bg"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:textColor="@color/white"
            android:layout_marginBottom="@dimen/_20sdp"
            />
        <TextView
            android:id="@+id/tvJoin"
            android:layout_width="@dimen/_60sdp"
            android:layout_height="@dimen/_20sdp"
            android:text="@string/join_1"
            android:background="@drawable/orange_button_bg"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:visibility="gone"
            android:textColor="@color/white"
            android:layout_marginBottom="@dimen/_20sdp"
            />
    </RelativeLayout>
    </RelativeLayout>
</layout>