<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".fragments.SearchFragment"
        android:orientation="vertical"
        >

        <RelativeLayout
            android:id="@+id/rlHeader"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_60sdp"
            android:background="@drawable/ic_header_bg"
            >

            <ImageView
                android:id="@+id/img_header"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_20sdp"
                android:src="@drawable/ic_back"
                android:padding="@dimen/_2sdp"
                android:layout_centerVertical="true"
                android:scaleType="centerInside"
                android:layout_marginLeft="@dimen/_5sdp"
                app:tint="@color/white" />

            <TextView
                android:id="@+id/tv_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_semi_bold"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/white"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/img_header"
                android:textStyle="bold"
                android:layout_marginLeft="@dimen/_10sdp"
                android:text="@string/comments"
                android:textSize="@dimen/_15sdp" />
        </RelativeLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_below="@id/rlHeader"
            android:layout_above="@id/llEmojis"
            android:id="@+id/rvComments"/>
        <LinearLayout
            android:id="@+id/llEmojis"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_above="@id/rlbottom"
            >

            <TextView
                android:id="@+id/tvEmoji1"
                android:layout_width="0dp"
                android:layout_height="@dimen/_30sdp"
                android:layout_weight=".5"
                android:text="0x1F60A"
                android:textColor="#FF000000"
                android:textSize="@dimen/_18sdp"
                android:gravity="center"
                />
            <TextView
                android:id="@+id/tvEmoji2"
                android:layout_width="0dp"
                android:layout_height="@dimen/_30sdp"
                android:layout_weight=".5"
                android:text="0x1F60A"
                android:textSize="@dimen/_18sdp"
                android:textColor="#FF000000"
                android:gravity="center"
                />
            <TextView
            android:id="@+id/tvEmoji3"
            android:layout_width="0dp"
            android:layout_height="@dimen/_30sdp"
            android:layout_weight=".5"
            android:text="0x1F60A"
            android:textSize="@dimen/_18sdp"
            android:textColor="#FF000000"
            android:gravity="center"
            />
            <TextView
                android:id="@+id/tvEmoji4"
                android:layout_width="0dp"
                android:layout_height="@dimen/_30sdp"
                android:layout_weight=".5"
                android:text="0x1F60A"
                android:textColor="#FF000000"
                android:textSize="@dimen/_18sdp"
                android:gravity="center"
                />
        </LinearLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_above="@id/rlbottom"
            android:layout_below="@+id/rlHeader"
            android:id="@+id/rvTagComment"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            android:id="@+id/rlbottom"
            android:layout_alignParentBottom="true">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="@dimen/_35sdp"
                android:layout_height="@dimen/_35sdp"
                android:id="@+id/ivUserProfile"
                android:layout_marginLeft="@dimen/_8sdp"
                android:background="@drawable/circle_gray"
                android:layout_centerVertical="true"
                />
            <EditText
                android:id="@+id/etComment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:textSize="@dimen/_14sdp"
                android:fontFamily="@font/inter_medium"
                android:hint="Add a Comment"
                android:layout_marginLeft="@dimen/_15sdp"
                android:background="@null"
                android:textColor="@color/black"
                android:layout_toLeftOf="@id/tvSendMessage"
                android:layout_toRightOf="@id/ivUserProfile"
                />
            <TextView
                android:id="@+id/tvSendMessage"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_30sdp"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/_10sdp"
                android:adjustViewBounds="true"
                android:clickable="true"
                android:text="Post"
                android:paddingHorizontal="@dimen/_10sdp"
                android:gravity="center"
                android:layout_centerVertical="true"
                android:scaleType="fitCenter"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_chat_send" />

        </RelativeLayout>
    </RelativeLayout>
    </androidx.core.widget.NestedScrollView>

</layout>