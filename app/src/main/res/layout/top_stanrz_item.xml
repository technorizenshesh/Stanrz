<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/light_gray_fill"
            android:padding="@dimen/_10sdp"
            android:layout_margin="@dimen/_10sdp"
            >

            <RelativeLayout
                android:id="@+id/rlProfile"
                android:layout_width="@dimen/_53sdp"
                android:layout_height="@dimen/_53sdp"
                >
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/iv_profile"
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="@dimen/_50sdp"
                    android:src="@drawable/rider"
                    android:background="@drawable/circle_gray"
                    />

                <TextView
                    android:id="@+id/tvRanking"
                    android:layout_width="@dimen/_23sdp"
                    android:layout_height="@dimen/_23sdp"
                    android:background="@drawable/pink_badge_circle"
                    android:layout_alignParentBottom="true"
                    android:text="1"
                    android:textColor="@color/white"
                    android:layout_alignParentRight="true"
                    android:gravity="center"
                    android:textSize="@dimen/_11sdp"
                    android:fontFamily="@font/inter_semi_bold"
                    />
            </RelativeLayout>


            <TextView
                android:id="@+id/tv_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_semi_bold"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/black"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/rlProfile"
                android:textStyle="bold"
                android:layout_marginLeft="@dimen/_20sdp"
                android:text="Hello"
                android:layout_toLeftOf="@id/llSuperlike"
                android:textSize="@dimen/_14sdp" />

            <LinearLayout
                android:id="@+id/llSuperlike"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                 android:orientation="horizontal"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                >

                <ImageView
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:src="@drawable/ic_super_heart"
                    app:tint="@color/red" />

            <TextView
                android:id="@+id/tvSuperLikes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_regular"
                android:layout_gravity="center_vertical"
                android:textColor="@color/black"
                 android:textStyle="bold"
                android:gravity="center_vertical"
                android:layout_marginLeft="@dimen/_5sdp"
                android:textSize="@dimen/_14sdp" />
            </LinearLayout>

        </RelativeLayout>
    </LinearLayout>
</layout>